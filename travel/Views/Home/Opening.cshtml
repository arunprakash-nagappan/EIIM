<style>
    #contend{
        font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            text-align: center;

    }
    #header{
         background-color: #3498db;
            padding: 50px;
            color: #fff;
    }
    #section {
            margin: 100px;
        }
    #section-h1 {
        color: #3498db;
       font-size: 2em;
       margin-bottom: 100px;
    }
     #section-h2 {
        color: #3498db;
       font-size: 2em;
       margin-bottom: 100px;
    }
    #contend-p {
         font-size: 1.2em;
         color: #555;
    }
     .app-image {
            width: 80%;
            max-width: 400px;
            margin: 20px auto;
            border-radius: 8px;
        }

        .cta-button {
            display: inline-block;
            padding: 15px 30px;
            font-size: 1.2em;
            text-decoration: none;
            background-color: #e74c3c;
            color: #fff;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .cta-button:hover {
            background-color: #c0392b;
        }
</style>
    <!-- Your page content goes here -->
     <div id="contend">
       @* <header id="header">
        <h1 id="contend-h1">Discover Your Next Adventure</h1>
    </header>  *@

    <section id="section"> 
        @* <img src="~/bus.png" alt="Travel App" class="app-image">
        <p id="contend-p">Welcome to our travel booking app! Explore exciting destinations, find great deals, and plan your perfect getaway.</p> *@
        <h1 id="section-h1">Welcome to Travel Booking!</h1>
        <h2 id="section-h2">Hello, @Context.Session.GetString("UserName")!</h2>
        <p>Explore and book your next adventure with us.</p>
        <a href="Booking" class="booking-button">Book a Trip</a>
    </section> 
    </div>
 <!-- Bootstrap and jQuery scripts -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
